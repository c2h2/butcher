<%= simple_form_for(@word) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :freq %>
    <%= f.input :attr %>
    <%= f.input :is_custom %>
    <%= f.input :attr2 %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
